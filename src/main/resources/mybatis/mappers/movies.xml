<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.jhta.moviefan.dao.MovieDao">

	<resultMap type="com.jhta.moviefan.vo.Movie" id="MovieResultMap">
		<id column="MOIVE_NO"	property="no"/>
		<result column="MOVIE_TITLE" property="title"/>
		<result column="MOVIE_RATE" property="rate"/>
		<result column="MOVIE_RUNTIME" property="runTime"/>
		<result column="MOVIE_OPEN_DATE" property="openDt"/>
		<result column="MOVIE_USER_RATING" property="userRating"/>
		<result column="MOVIE_TOTAL_AUDIENCE" property="totalAudience"/>
		<result column="MOVIE_SUMMARY" property="summary"/>
		<result column="MOVIE_PRODUCER" property="producer"/>
	</resultMap>
	
	<select id="getMovieByMovieNo" parameterType="int" resultMap="MovieResultMap">
		select *
		from movie
		where movie_no = #{value}
		
	</select>
	
	<insert id="insertMovie" parameterType="com.jhta.moviefan.dto.movieDto">
		insert into movie
		(MOVIE_NO, MOVIE_TITLE, MOVIE_RATE, MOVIE_RUNTIME)
		values
		(#{no}, #{title}, #{rate}, #{runTime})
	</insert>
	
	<insert id="insertActor" parameterType="com.jhta.moviefan.vo.Movie_Actor">
		insert into ACTOR
		(ACTOR_NO, ACTOR_NAME)
		values
		(movie_actor_seq.nextval, #{actorName})
	</insert>
	<insert id="insertMovieActor" parameterType="com.jhta.moviefan.vo.Movie_Actor">
		insert into movie_actor
		(MOIVE_NO, ACTOR_NO)
		values
		(#}movieNo},movie_actor_seq.nextval)
	</insert>
	
	<insert id="insertDirector" parameterType="com.jhta.moviefan.vo.Movie_Director">
		insert into DIRECTOR
		(DIRECTOR_NO, DIRECTOR_NAME)
		values
		(movie_director_seq.nextval, #{directorName})
	</insert>
	
	<insert id="insertMovieDirector" parameterType="com.jhta.moviefan.vo.Movie_Director">
		insert into MOVIE_DIRECTOR
		(MOIVE_NO, DIRECTOR_NO)
		(#{movieNo}, movie_director_seq.nextval)
		values
	</insert>
	
	<insert id="insertGenre" parameterType="com.jhta.moviefan.vo.Movie_Genre">
		insert into GENRE
		(GENRE_NO, GENRE_NAME)
		values
		(MOVIE_GENRE_SEQUNCE_SEQ.nextval, #{genreName})
	</insert>
	<insert id="insertMovieGenre" parameterType="com.jhta.moviefan.vo.Movie_Genre">
		insert into MOVIE_GENRE
		(MOIVE_NO, GENRE_NO)
		values
		(#{movieNo}, MOVIE_GENRE_SEQUNCE_SEQ.nextval)
	</insert>
</mapper>